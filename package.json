{
  "name": "ramon",
  "version": "1.0.0",
  "description": "Expressive visualization",
  "main": "dist/ramon.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "cover": "nyc npm test",
    "gendocs": "typedoc index.d.ts src",
    "start": "webpack --watch --config demo/webpack.demo.js",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha -r ts-node/register -r jsdom-global/register -r ./src/test/util/mocha-register src/test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagthebeetle/ramon.git"
  },
  "keywords": [
    "visualization",
    "3d",
    "threejs"
  ],
  "author": "jagthebeetle",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jagthebeetle/ramon/issues"
  },
  "homepage": "https://github.com/jagthebeetle/ramon#readme",
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/chai-spies": "0.0.0",
    "@types/mocha": "^2.2.46",
    "@types/three": "^0.89.2",
    "@types/webspeechapi": "0.0.29",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "jsdom": "11.5.1",
    "jsdom-global": "3.0.2",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "ts-loader": "^3.2.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "three": "^0.89.0",
    "three-trackballcontrols": "0.0.7"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
